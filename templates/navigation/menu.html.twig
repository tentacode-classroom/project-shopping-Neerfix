<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('homepage') }}"><i class="fas fa-dharmachakra"></i> Boat'Ik</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">{% trans %}Home{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin') }}">{% trans %}Administration {% endtrans %}<span class="sr-only">(current)</span></a>
                </li>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">{% trans %}Logout{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('registration') }}">{% trans %}Register{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('login') }}">{% trans %}Login{% endtrans %} <span class="sr-only">(current)</span></a>
                </li>
                {% endif %}

            </ul>
            <form class="form-inline mt-2 mt-md-0">
                <input class="form-control mr-sm-2" type="text" placeholder="{% trans %}Search{% endtrans %}" aria-label="Search">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">{% trans %}Search{% endtrans %}</button>
            </form>
        </div>
    </nav>
</header>